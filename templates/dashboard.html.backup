    <!-- Kitchen Modal -->
    <div class="modal" id="kitchenModal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Add Kitchen</h3>
                <button class="close-btn" onclick="closeKitchenModal()">&times;</button>
            </div>
            <form id="kitchenForm" onsubmit="saveKitchen(event)">
